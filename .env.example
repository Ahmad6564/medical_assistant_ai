# Medical AI Assistant - Environment Configuration
# Copy this file to .env and fill in your values

# API Keys
OPENAI_API_KEY=your_openai_api_key_here
ANTHROPIC_API_KEY=your_anthropic_api_key_here

# Database Configuration
DATABASE_URL=postgresql://user:password@localhost:5432/medical_ai
REDIS_URL=redis://localhost:6379/0

# API Configuration
API_HOST=0.0.0.0
API_PORT=8000
SECRET_KEY=your_super_secret_jwt_key_change_this
ACCESS_TOKEN_EXPIRE_MINUTES=30

# Model Paths
NER_MODEL_PATH=./models/ner_model
CLASSIFIER_MODEL_PATH=./models/classifier_model
ASR_MODEL_PATH=./models/asr_model

# MLOps Configuration
MLFLOW_TRACKING_URI=http://localhost:5000
WANDB_PROJECT=medical-ai-assistant

# Deployment
ENVIRONMENT=development
DEBUG=true
DEVICE=cuda
